<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <%= user_task.description %>
    </div>
    <div class="col-xs-4 text-right">
      <%= user_task.due %>
      <%= link_to fa_icon('pencil', text: 'Edit'), edit_user_task_path(user_task), remote: true, class: "btn btn-xs btn-primary" %>
      <%= link_to fa_icon('trash-o', text: 'Delete'), user_task, remote: true, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-xs btn-danger" %>
    </div>
  </div>
</div>